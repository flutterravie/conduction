.cond-vessel
	float left
	display block
	position relative
	width 350px
	height 400px
	border 1px solid #000
	padding-top 50px
	&-walls
		position relative
		display block
		margin 0 auto
		width 200px
		height 205px
		border-left 2px solid #000
		border-right 2px solid #000
		box-sizing content-box
		z-index 1
		&:before
		&:after
			content ''
			position absolute
			display block
			left -2px
			width 100%
			height 40px
			border-radius 100%
			border 2px solid #000
			box-sizing content-box
		&:before
			top -20px
			z-index 10
		&:after
			bottom -20px
	&-water
		position absolute
		display block
		bottom 0
		left 0
		width 200px
		height 150px
		line-height 130px
		background #77a6ff
		z-index 2
		&:before
		&:after
			content ''
			position absolute
			display block
			width 100%
			height 40px
			border-radius 100%
			background inherit
		&:after //поверхность
			top -23px
			border-bottom 1px solid #ccc
		&:before //дно
			bottom -18px
	&-ice
		position relative
		display block
		left -50%
		width inherit
		height 100%
		line-height 130px
		background #d3e2ff
		z-index 3
		&__top
		&__bottom
			content ''
			position absolute
			display block
			width 100%
			height 26%
			border-radius 100%
			background inherit
		&__top //поверхность
			top -15.3333%
			z-index 10
			border-bottom 1px solid #9db6e5
		&__bottom //дно
			bottom -12%
		&-wrapper
			position absolute
			display none
			top 55px
			left 50%
			width 200px
			height 150px

	&-footer
		position absolute
		bottom 0
		width inherit
		height 30px
		text-align center
		clearfix()

	&-label
		font-family 'Courier New', sans-serif
		width 100%
		
	&-temperature
		&:before
			content 'Температура: '
		&:after
			content '°c'

	&-vol
		&:before
			content 'Объём: '
		&:after
			content ' мл'
