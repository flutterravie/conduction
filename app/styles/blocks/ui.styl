.cond-ui
	width 470px
	height 500px
	font-family 'Courier New',sans-serif;

	&-wrapper
		padding 30px 20px

	&__item
		margin-bottom: 30px

	&__caption
		margin-bottom 5px
		vertical-align top

	&__radiobox
		margin-bottom 2px

	&__radio
		position relative
		top 2px
		margin-right 8px
		margin-bottom 5px
		cursor pointer
		&:checked
		&:checked + label
			cursor default
		&:checked:before
			position absolute
			top 25%
			left 3px
			z-index 20
			display block
			width 70%
			height 70%
			background #666
			content ''
		&:after
			position absolute
			z-index 10
			display block
			width 100%
			height 100%
			background #ddd
			border 1px solid #666
			content ''

	&__label
		cursor pointer

	&__input
		width 43px
		padding 2px 5px
		text-align right
		border 1px solid black
		background inherit

	&__btn
		display inline-block
		padding 2px 10px
		border 1px solid black
		cursor pointer
		&:active
			background #ccc

	&__speed
		display inline-block
		text-align center
		& input
			margin-right 0
		& label
			display block
			margin-top 3px
			width 35px
