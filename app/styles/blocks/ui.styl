.cond-ui
	width 470px
	height 500px
	font-family 'Courier New',sans-serif;

	&-wrapper
		padding 30px 20px

	&__item
		margin-bottom: 30px

	&__caption
		margin-bottom 5px

	&__label
		display block;

	&__radio
		margin-right 15px

	&__input
		width 125px
		padding 2px 5px
		border 1px solid black
		background inherit

	&__btn
		display inline-block
		padding 2px 10px
		border 1px solid black
		cursor pointer
		&:active
			background #ccc
