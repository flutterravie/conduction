.cond-ui-wrapper.cond-ui-general
		.cond-ui__range
			.cond-ui__range-label Начальная температура воды
			input(type='range' min='10' max='90' value="20" step='10').cond-ui__range-input
		.cond-ui__speed
			.cond-ui-set__text Скорость
				input(type='radio' name='speed').cond-ui-set__range
				input(type='radio' name='speed' checked).cond-ui-set__range
				input(type='radio' name='speed').cond-ui-set__range
				input(type='radio' name='speed').cond-ui-set__range
	button.cond-ui__btn.cond-ui__btn_switch.cond-ui__btn_start
