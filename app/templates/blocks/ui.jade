.cond-ui-wrapper.cond-ui-extra
		.cond-ui__range
			.cond-ui__range-label Объём воды
			input(type='range' min='10' max='100' value="10" step='10').cond-ui__range-input
		.cond-ui-set__item
			.cond-ui__range-label Радиус сосуда
			input(type='range' min='5' max='20' value="10" step='5').cond-ui__range-input
		.cond-ui-set__item
			.cond-ui__range-label Высота сосуда
			input(type='range' min='10' max='40' value="30" step='10').cond-ui__range-input